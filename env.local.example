# OpenAI API Key (필수)
# OpenAI 웹사이트에서 발급받은 API 키를 입력하세요
# https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key_here

# NAVER Clova Studio API (선택사항 - OpenAI 대안)
# Clova Studio에서 발급받은 API 키와 URL을 입력하세요
CLOVA_API_KEY=your_clova_api_key_here
CLOVA_API_URL=https://your-clova-endpoint.com/v1/chat/completions

# LLM Provider 선택 (openai 또는 clova)
# 기본값: openai
LLM_PROVIDER=openai

# Whisper API (선택사항 - 음성 인식용)
# 자막이 없는 영상의 경우 음성을 텍스트로 변환
# 기본값: false
ENABLE_WHISPER=false

# Python 가상환경 경로 (선택사항)
# 기본값: ./venv
PYTHON_VENV_PATH=./venv

# 앱 설정
NEXT_PUBLIC_APP_NAME="YouTube Recipe Summarizer"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# 개발 환경 설정
NODE_ENV=development
